call plug#begin('~/.vim/plugged')
" Misc nice additions to vim's behaviour
Plug 'tpope/vim-repeat'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-unimpaired'
Plug 'tpope/vim-projectionist'

" Make the quickfix list editable
Plug 'stefandtw/quickfix-reflector.vim'

" Fuzzy find
Plug 'junegunn/fzf'
Plug 'junegunn/fzf.vim'

" Nice ack/grep/ag integration
Plug 'mileszs/ack.vim'

" Fancy status bar and editor theme
Plug 'vim-airline/vim-airline'
Plug 'drewtempelmeyer/palenight.vim'

" Size split buffers based on which is focused
Plug 'roman/golden-ratio'

" Automatically configure certain editor behaviours if a .editorconfig file is
" present
Plug 'editorconfig/editorconfig-vim'

" Show git diff stats on the side of the buffer
Plug 'airblade/vim-gitgutter'

" Ruby/Rails
Plug 'kana/vim-textobj-user'
Plug 'nelstrom/vim-textobj-rubyblock'
Plug 'tpope/vim-rails'
Plug 'thoughtbot/vim-rspec'

" JavaScript/TypeScript
Plug 'leafgarland/typescript-vim'
Plug 'MaxMEllon/vim-jsx-pretty'
Plug 'Quramy/tsuquyomi'

Plug 'whatyouhide/vim-textobj-xmlattr'

Plug 'vim-test/vim-test'

" Terraform
Plug 'hashivim/vim-terraform'

" formerly w0rp/ale
Plug 'dense-analysis/ale'

if has('nvim')
  Plug 'Shougo/vimproc.vim' " for neovim specifically
endif

" Show colour previews
Plug 'chrisbra/Colorizer'

call plug#end()
" vim:set ft=vim:
